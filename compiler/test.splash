
main {
    var name = readLine("What is your name?")


    var p = Person(name)

    print("Hello {p.name}! This is Splash.")
    p.sayHi()
    

    print("Is {p.name}'s age odd? {p.age.isOdd()}")

}

class Person {
    string name
    int age

    constructor(this.name, this.age = 10) {
        
    }

    sayHi() {
        print("{name} says hi, he's {age} years old")
    }
}