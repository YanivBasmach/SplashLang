
main {
    var name = readLine("What is your name? ")
    var age = int.parse(readLine("And your age? "))

    if (age < 18) {
        print("You are not legal")
    } else {
        print("You are legal!")
    }

    var p = Person(name, age)

    print("Hello {p.name}! This is Splash.")
    p.sayHi()
    p.sayHi("Someone")
    

    print("Is {p}'s age odd? {p.age.isOdd()}")

}

class Person {
    string name
    int age

    constructor(this.name, this.age = 10)

    sayHi() {
        print("{name} says hi, he's {age} years old")
    }

    sayHi(string to) {
        print("{name} says hi to {to}")
    }

    toString() {
        return "Person({name})"
    }
}